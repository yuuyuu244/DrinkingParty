<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="jjj.drinkingparty.MainActivity">

    <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_alignParentTop="true" />

    <android.support.design.widget.TabLayout android:id="@+id/tabs"
        android:layout_width="match_parent" android:layout_height="@dimen/main_tabHeight"
        app:tabMaxWidth="0dp" app:tabGravity="fill" app:tabMode="fixed"
        app:tabBackground="@color/tabColor" app:tabTextColor="@color/textColor"
        app:tabSelectedTextColor="@color/white" app:tabTextAppearance="@style/TabText"
        app:tabIndicatorHeight="4dp" app:tabIndicatorColor="@color/white" />

</RelativeLayout>
