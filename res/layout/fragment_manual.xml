<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/fragment_manual"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context="jjj.drinkingparty.ManualFragment">

    <ImageView android:id="@+id/imageView" android:layout_width="match_parent"
        android:layout_height="match_parent" android:background="@drawable/drink1" />

    <ScrollView android:layout_height="match_parent" android:layout_width="match_parent"
        android:paddingTop="@dimen/manual_scrollPaddingTop">

        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
            android:orientation="vertical" android:padding="@dimen/manual_llOverallPaddingTop">

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                android:gravity="center" android:padding="@dimen/manual_textTitlePadding"
                android:text="Welcome to Drinking Party" android:textColor="#ffffff"
                android:textSize="@dimen/manual_titleTextSize"
                android:background="@drawable/manual_border" />

            <Space android:layout_width="match_parent"
                android:layout_height="@dimen/manual_titleBottomSpace" />

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="@string/manual1" android:textColor="#ffffff"
                android:textSize="@dimen/manual_explanationTextSize" />

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:padding="@dimen/manual_textPaddingSize" android:text="Purpose"
                android:textColor="#ffffff" android:textSize="@dimen/manual_itemTextSize"
                android:background="@drawable/manual_border" />

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                android:paddingTop="@dimen/manual_textPaddingSize" android:text="@string/manual2"
                android:textColor="#ffffff" android:textSize="@dimen/manual_explanationTextSize" />

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:padding="@dimen/manual_textPaddingSize" android:text="How to use"
                android:textColor="#ffffff" android:textSize="@dimen/manual_itemTextSize"
                android:background="@drawable/manual_border" />

            <Space android:layout_width="match_parent"
                android:layout_height="@dimen/manual_spaceHeight" />

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                android:paddingTop="5dp" android:text="@string/manual3" android:textColor="#ffffff"
                android:textSize="@dimen/manual_explanationTextSize" />

            <Space android:layout_width="match_parent"
                android:layout_height="@dimen/manual_spaceHeight" />

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:orientation="horizontal">

                    <ImageView android:layout_width="@dimen/manual_imageSize"
                        android:layout_height="@dimen/manual_imageSize"
                        android:background="@drawable/camera" />

                    <TextView android:layout_width="match_parent"
                        android:layout_height="match_parent" android:text="フロントカメラ/バックカメラ"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/manual_explanationTextSize"
                        android:paddingLeft="@dimen/manual_textPaddingLeft"
                        android:gravity="center_vertical" />

                </LinearLayout>

                <Space android:layout_width="match_parent"
                    android:layout_height="@dimen/manual_spaceHeight" />

                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:orientation="horizontal">

                    <ImageView android:layout_width="@dimen/manual_imageSize"
                        android:layout_height="@dimen/manual_imageSize"
                        android:background="@drawable/microphone_on" />

                    <TextView android:layout_width="match_parent"
                        android:layout_height="match_parent" android:text="マイクon/off"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/manual_explanationTextSize"
                        android:paddingLeft="@dimen/manual_textPaddingLeft"
                        android:gravity="center_vertical" />

                </LinearLayout>

                <Space android:layout_width="match_parent"
                    android:layout_height="@dimen/manual_spaceHeight" />

                <LinearLayout android:layout_height="wrap_content"
                    android:layout_width="match_parent" android:orientation="horizontal">

                    <ImageView android:layout_width="@dimen/manual_imageSize"
                        android:layout_height="@dimen/manual_imageSize"
                        android:background="@drawable/video_on" />

                    <TextView android:layout_width="match_parent"
                        android:layout_height="match_parent" android:text="自身の映像on/off"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/manual_explanationTextSize"
                        android:paddingLeft="@dimen/manual_textPaddingLeft"
                        android:gravity="center_vertical" />

                </LinearLayout>

                <Space android:layout_width="match_parent"
                    android:layout_height="@dimen/manual_spaceHeight" />

                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:orientation="horizontal">

                    <ImageView android:layout_width="@dimen/manual_imageSize"
                        android:layout_height="@dimen/manual_imageSize"
                        android:background="@drawable/hang_up" />

                    <TextView android:layout_width="match_parent"
                        android:layout_height="match_parent" android:text="通話切断"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/manual_explanationTextSize"
                        android:paddingLeft="@dimen/manual_textPaddingLeft"
                        android:gravity="center_vertical" />

                </LinearLayout>

            </LinearLayout>

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                android:gravity="center" android:text="制作　JJJ" android:textColor="#ffffff"
                android:textSize="@dimen/manual_explanationTextSize"
                android:paddingTop="@dimen/manual_textLastPaddingTop" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
